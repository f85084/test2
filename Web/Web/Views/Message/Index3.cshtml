@using Library;
@*@using Library.Reply;*@
@model IEnumerable<Library.Message>

<h2>留言版</h2>
<div class="row">
    <div class="table-responsive">
        <div class="col-sm-7">
            <button type="button" class="btn btn-primary btn-sm " style="margin-top:10px ;margin-bottom:10px;" value="建立新的留言" onclick="location.href='@Url.Action("Create", "Message")'">建立新的留言</button>
        </div>
        <div class="col-sm-7">
            @foreach (Message item in Model)
            {
                <div class="card">
                    <div class="card-header">
                        @*@Html.Hidden("UserId", "2")
                            @Html.Hidden("UserName", "BB")*@
                        <ul>
                            @Html.Label("model.UserName", "會員暱稱")  : @Html.DisplayFor(modelItem => item.UserName)
                        </ul>
                        <ul>
                            @Html.Label("model.Context", "留言內容") :  @Html.DisplayFor(modelItem => item.Context)
                        </ul>
                        <ul>
                            @Html.Label("model.CreatDate", "留言日期") : @Html.DisplayFor(modelItem => item.CreatDate)
                        </ul>
                        <input type="button" class="btn btn-primary btn-sm" value="回覆" onclick="location.href='@Url.Action("Create", "Reply")'" />
                    </div>

                    <div class="card-body">
                        <h5>回覆</h5>
                        @*@Html.Partial("_ReplyPartial", Model.<Library.Reply>)*@
                    </div>
                </div>
            }
        </div>
    </div>
</div>